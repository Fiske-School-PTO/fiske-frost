---
import Container from "@components/container.astro";
import Cta from "@components/cta.astro";
import Features from "@components/features.astro";
import Hero from "@components/hero.astro";
import Logos from "@components/logos.astro";
import SplashLayout from "@layouts/SplashLayout.astro";
import whiteLogo from "../assets/Fiske Frost logo white.png";
import starryLogo from "../assets/blue glitter frost logo-sm.png";

import { Image } from "astro:assets";
//export const prerender = true;
---
<SplashLayout title="Welcome">
  <div class="snap-y snap-mandatory h-screen overflow-scroll">
    <div class="snap-start w-screen h-screen flex flex-col items-center justify-center text-2xl bg-starry ">
      <div class="flex justify-center mb-4">
        <Image
        formats={['jpg','webp']}
        src={whiteLogo}
        alt="Fiske Frost"
        class="w-1/3"
        />
      </div>
      <div>
        <span class="text-white text-lg  sm:text-xl md:text-2xl lg:text-3xl xl:text-4xl">community-unity-connection</span>
      </div>
      <div class="mt-6">
        <button class="bg-transparent text-white font-light text-base hover:text-white py-2 px-10 border border-white hover:border-slate-500">
          <a href="/preregister">PRE-REGISTER</a>
        </button>
      </div>
    </div>
    <div class="snap-start bg-white w-screen h-screen flex items-center justify-center text-8xl">
      <div class="items-center flex flex-col-reverse md:flex-row space-x-4 w-screen mt-10">
        <div class="mt-10 text-center md:text-left w-1/2 md:ml-10 lg:ml-15">
          <div class=" w-auto lg:w-7/12">
            <h1 class="text-2xl md:text-2xl lg:text-3xl lx:text-4xl font-bold text-balance">Welcome to Fiske&nbsp;Frost</h1>
            <p class="text-lg md:text-xl xl:text-2xl mt-5">Fiske PTO's biennial gala is a sophisticated, relaxed, adult-only gathering.  It's your invitation to be part of something unique where community, fun and unity take center stage.</p>
          </div>
        </div>
        <div class="items-center justify-center flex flex-col w-1/2">
          <div class="flex justify-center mb-3">
            <Image
            formats={['jpg','webp']}
            src={starryLogo}
            alt="Save the Date"
            class="w-2/3"
            />
            </div>
          <p class="text-center text-lg">March 22, 2024</p>
          <p class="text-center text-lg">7 p.m. onwards</p>
          <p class="text-center text-lg">Cafe&nbsp;Escardille,&nbsp;Burlington,&nbsp;MA</p>
        </div>
      </div>
    </div>
</SplashLayout>