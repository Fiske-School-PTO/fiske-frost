---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title" class="text-black">Fiske Frost</Fragment>
      <Fragment slot="desc">
        <span class="block">Pre-Registration</span>
        <span class="block" style="font-size: 75%; background: inherit;">
        No financial commitment needed right now
        </span>
      </Fragment>
    </Sectionhead>
    <div class="mt-6 center text-center" style="margin-top: 20px; margin-bottom: 20px;">
      <p class="text-2xl text-slate-600 font-bold">March 22, 2024<br>7 pm onwards</p>
    </div>
    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-12">
      <div>
        <Contactform />
      </div>
      <div>
        <p class="text-2xl leading-relaxed text-slate-600">
          Welcome! 
          <br>
          <br>
          Fiske PTO's biennial gala, 'Fiske Frost,' is a sophisticated, relaxed, adult-only gathering. 
          <br>
          <br>
          The evening is designed to nurture connections and strengthen the bonds within our school community â€” an exclusive experience created for the parents, educators, and staff of Fiske School.
          <br>
          <br>
          To ensure a seamless experience for all attendees, we kindly invite you to pre-register for this exciting event.
          Your pre-registration helps us prepare and ensures a smooth experience for everyone.         
        </p>
      </div>
    </div>
    <div class="mt-6 center text-center" style="margin-top: 40px;">
      <p class="text-2xl text-slate-600">
        <b>Privacy Notice:</b> We value your privacy. Your information will be confidential and used solely for event-related communication.
      </p>
    </div>
  </Container>
</Layout>
